@{
    ViewBag.Title = "Dropdown based formulae";
    Layout = "_Layout";
}
@section Scripts{
    <script src="~/js/OutputFormula.js"></script>
    <script src="~/js/dropdowns.js"></script>
}
<link rel="stylesheet" href="~/css/dropdowns.css" />

<div class="container">
    <div class="row">
        <div class="col-md-5" id="selectWidget">
            <div class="btn-group-lg" id="topButtonsRow" role="group" aria-label="...">
                <button id="revertButton" type="button" class="btn btn-danger"><span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span> Revert</button>
                <button id="addSubscriptButton" type="button" class="btn btn-info">X<sub>n</sub></button>
                <button type="button" class="btn btn-default hasHtmlAppendableToFormula">X<sup>+</sup></button>
                <button type="button" class="btn btn-default hasHtmlAppendableToFormula">X<sup>-</sup></button>
                <button type="button" class="btn btn-default hasHtmlAppendableToFormula">(</button>
                <button type="button" class="btn btn-default hasHtmlAppendableToFormula">)</button>
                <button type="button" class="btn btn-default hasHtmlAppendableToFormula">[</button>
                <button type="button" class="btn btn-default hasHtmlAppendableToFormula">]</button>
            </div>
            <div class="btn-group-lg" id="dropdowns" role="group" aria-label="...">
                <div class="btn-group">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        Неметаллы
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <li><a class="hasHtmlAppendableToFormula">H</a></li>
                        <li><a class="hasHtmlAppendableToFormula">O</a></li>
                        <li><a class="hasHtmlAppendableToFormula">S</a></li>
                        <li><a class="hasHtmlAppendableToFormula">C</a></li>
                        <li><a class="hasHtmlAppendableToFormula">N</a></li>
                        <li><a class="hasHtmlAppendableToFormula">Se</a></li>
                        <li><a class="hasHtmlAppendableToFormula">Te</a></li>
                        <li><a class="hasHtmlAppendableToFormula">Po</a></li>
                    </ul>
                </div>

                <div class="btn-group">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        Щелочные металлы
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
                        <li><a class="hasHtmlAppendableToFormula">Li</a></li>
                        <li><a class="hasHtmlAppendableToFormula">Na</a></li>
                        <li><a class="hasHtmlAppendableToFormula">K</a></li>
                        <li><a class="hasHtmlAppendableToFormula">Rb</a></li>
                    </ul>
                </div>
                <div class="btn-group">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        Галогены
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu3">
                        <li><a class="hasHtmlAppendableToFormula">F</a></li>
                        <li><a class="hasHtmlAppendableToFormula">Cl</a></li>
                        <li><a class="hasHtmlAppendableToFormula">Br</a></li>
                        <li><a class="hasHtmlAppendableToFormula">I</a></li>
                    </ul>
                </div>
                <div class="btn-group">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu4" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        Переходные металлы
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu4">
                        <li><a class="hasHtmlAppendableToFormula">Ti</a></li>
                        <li><a class="hasHtmlAppendableToFormula">V</a></li>
                        <li><a class="hasHtmlAppendableToFormula">Cr</a></li>
                        <li><a class="hasHtmlAppendableToFormula">Mn</a></li>
                        <li><a class="hasHtmlAppendableToFormula">Fe</a></li>
                        <li><a class="hasHtmlAppendableToFormula">Co</a></li>
                    </ul>
                </div>

            </div>

        </div>
        <p></p><p></p>
        <div class="col-md-2">
            <span id="formulaOutput">C2H5OH</span>
        </div>

    </div>
</div>

