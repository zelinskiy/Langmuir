@{
    ViewBag.Title = "Dropdown based formulae";
    Layout = "_Layout";
}
@section Scripts{
    <script src="~/js/OutputFormula.js"></script>
    <script src="~/js/autocomplete.js"></script>
}
<link rel="stylesheet" href="~/css/dropdowns.css" />

<div class="container">
    <div class="row">

        <div class="col-md-3">
            <p></p>
            <div class="btn-group" role="group" aria-label="...">
                <button id="revertButton" type="button" class="btn btn-default">revert</button>
                <button id="addSubscriptButton" type="button" class="btn btn-default">X <sub>n</sub></button>
                <button type="button" class="btn btn-default hasHtmlAppendableToFormula"><sup>+</sup></button>
                <button type="button" class="btn btn-default hasHtmlAppendableToFormula"><sup>-</sup></button>
            </div>

            <p></p>

            <div class="btn-group" role="group" aria-label="...">
                <button type="button" class="btn btn-default hasHtmlAppendableToFormula">(</button>
                <button type="button" class="btn btn-default hasHtmlAppendableToFormula">)</button>
                <button type="button" class="btn btn-default hasHtmlAppendableToFormula">[</button>
                <button type="button" class="btn btn-default hasHtmlAppendableToFormula">]</button>
            </div>
            
            <p></p>
            
            

            <p></p>
            <input type="text" class="list-group-item form-control" id="autoCompleteInput" placeholder="e.g. Ca, N, Fe" />
            <hr />
            <div id="elemsList" class="list-group col-md-3"></div>

        </div>
        <p></p><p></p>
        <div class="col-md-4 col-md-offset-1">
            <span id="formulaOutput">C2H5OH</span>
        </div>

    </div>
</div>

